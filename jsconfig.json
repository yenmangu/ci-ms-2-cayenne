{
	"compilerOptions": {
		"target": "ES2020",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,

		"checkJs": true,
		"strict": false,

		"baseUrl": "./src",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],

		"allowSyntheticDefaultImports": true,
		"types": ["node"]
	},
	"include": ["src/**/*", "scripts/**/*", "public/**/*", "createSlice.js"],
	"exclude": ["node_modules", "api/node_modules"]
}
